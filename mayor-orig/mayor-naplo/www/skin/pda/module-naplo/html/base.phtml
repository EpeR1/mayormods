		    $d = date('Y-m-d', $t);
		    if ($d == $$paramName) {
			if (strtotime("$count days", $t) <= $igTime) $kovetkezo = date('Y-m-d', strtotime("$count days", $t));
			break;
		    }
		    $elozo = $d;
		}
	    }

