	    echo '<input type="hidden" name="action" value="szavaz" />';
	    echo '<select name="szam" id="szam">';
	    for ($i=1; $i<200; $i++) {
		echo '<option value="'.$i.'">'.$i.'</option>';
	    }
	    echo '</select>';
