    function putEgyszamTablazat($ADAT) {
	
	foreach($ADAT as $het => $D) {
	    echo '<table align="center" class="egyszam">';
	    echo '<thead><tr><th colspan="2">'.$het.'. '._JATEKHET.'</th></tr></thead>'."\n";
	    echo '<tfoot><tr><th>'._SZAM.'</th><th>'._DB.'</th></tr></tfoot>'."\n";
	    echo '<tbody>';
	    foreach ($D as $szam => $T) {
		echo '<tr>';
		echo '<td>'.$szam.'</td>';
		echo '<td>'.$T['db'].'</td>';
		echo '</tr>';
	    }
	    echo '</tbody>';
	}
	echo '</table>';
    }

